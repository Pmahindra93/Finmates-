
<nav>
  <div class="fm_heading">
        <%= image_tag 'fm_heading.png' %>
      </div>

    <ul class="nav-links">
      <% if user_signed_in? %>
            <li><%= link_to "Home", '#', class: "nav-link" %></li>
            <li><%= link_to "Newsfeed", '#', class: "nav-link" %></li>
            <li><%= link_to "Favourites", '#', class: "nav-link" %></li>
            <li><%= link_to "Settings", "#", class: "nav-link" %></li>
            <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "nav-link" %></li>
          </div>
      <% else %>
          </li><%= link_to "Enter", new_user_session_path, class: "nav-link" %></li>
      <% end %>
    </ul>

    <div class="burger">
      <div class="line1"></div>
      <div class="line2"></div>
      <div class="line3"></div>
    </div>

</nav>

 <script>
   const navSlide = () => {
      const burger = document.querySelector('.burger');
      const nav = document.querySelector('.nav-links');
      const navLinks = document.querySelectorAll('.nav-links li');

      burger.addEventListener('click', () => {
        // Toggle Nav
        nav.classList.toggle('nav-active');

      //Animate Links
      navLinks.forEach((link, index) => {
        if (link.style.animation) {
            link.style.animation = '';
        } else {
          link.style.animation = `navLinkFade 0.5s ease forwards ${index / 7 + 1.5}s`;
        }
      });
    });
  }

  navSlide ();

 </script>




