<div class="nav">

  <div class="header">
    <%= link_to image_tag('fm_heading.png'), root_path %>
  </div>

  <div class="nav-links">
    <% if user_signed_in? %>
          <li><%= link_to image_tag('home-btn.png', :alt => "Profile", class: "nav-link"), users_path %></li>
          <li><%= link_to image_tag('news.png', ), class: "nav-link" %></li>
          <li><%= link_to image_tag('content.png', ), class: "nav-link" %></li>
          <li><%= link_to image_tag('favourites.png', ), class: "nav-link" %></li>
          <li><%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %></li>
        </div>
    <% else %>
        </li><%= link_to "Enter", new_user_session_path, class: "nav-link" %></li>
    <% end %>

  <div class="burger">
    <div class="line1"></div>
    <div class="line2"></div>
    <div class="line3"></div>
  </div>
</div>

 <script>
   const navSlide = () => {
      const burger = document.querySelector('.burger');
      const nav = document.querySelector('.nav-links');
      const navLinks = document.querySelectorAll('.nav-links li');

      burger.addEventListener('click', () => {
        // Toggle Nav
        nav.classList.toggle('nav-active');

      //Animate Links
      navLinks.forEach((link, index) => {
        if (link.style.animation) {
            link.style.animation = '';
        } else {
          link.style.animation = `navLinkFade 0.5s ease forwards ${index / 7 + 0.5}s`;
        }
      });
      //Burger Animation
      burger.classList.toggle('cross');
    });
  }

  navSlide ();

 </script>

