<div class="banner-container">
  <div class="banner-icons mt-3 pt-5">
    <%= link_to newsfeed_path do %>
      <i class="fa fa-chevron-left" aria-hidden="true"></i>
    <% end %>

    <!-- Favourite button -->
    <div>
      <%#= link_to education_content_favourites_path(@own_content), method: :post,  class:"pl-1 nav-button" do %>
        <%# if current_user.favourites.map { |fav| fav.own_content }.include?(@own_content) %>
          <!-- <i class="pl-3 fas fa-heart fa-lg ct-primary-light"></i> -->
        <%# else %>
          <!-- <i class="pl-3 far fa-heart fa-lg ct-primary-light"></i> -->
        <%# end %>
      <%# end %>

    <!-- Admin features -->
      <% if current_user.admin %>
          <%= link_to  edit_education_content_path(@education_content) do %>
            <i class="far fa-edit"></i>
          <% end %>
          <%= link_to education_content_path(@education_content), method: :delete, data: {confirm: "Are you sure you would like to delete this article?"} do %>
           <i class="fa fa-trash" aria-hidden="true"></i>
          <% end %>
      <% end %>
    </div>
  </div>

  <!-- <div class="article-category"> -->
    <!-- <p><%#= @education_content.category.upcase %></p> -->
  <!-- </div> -->

  <!-- Article title -->
  <div class="article-title">
    <h1><%= sanitize @education_content.title %></h1>
  </div>

  <div class="publishing-details">
    <!-- <p class="author-name"><%#= "#{@education_content.user.first_name} #{@education_content.user.last_name}" %></p> -->
    <p><%= "#{@education_content.created_at.strftime("%B %d, %Y")}" %></p> <!--- #{@education_content.reading_time} min read-->
  </div>
</div>
