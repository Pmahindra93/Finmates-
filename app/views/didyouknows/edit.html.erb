<div class="primary-container-newsfeed">
  <div class="row">
    <div class="col">
      <h5> Hello <%= current_user.first_name %>, edit your DYK below </h5>
      <br>
      <hr></hr>
      <%= simple_form_for @didyouknow do |f| %>
      <%= f.input :title%>

      <label>Key Take Aways</label>
      <%= f.input :description, as: :hidden, :input_html => { :id => "dyk_description" } %>
      <trix-editor input="dyk_description"></trix-editor>

      <%= f.input :image, as: :file %>

      <label>Content</label>
      <%= f.input :article, as: :hidden, :input_html => { :id => "dyk_content" } %>
      <trix-editor input="dyk_content"></trix-editor>

      <%= f.input :published_date, as: :datetime %>
      <%= f.button :submit, "Publish your fact", class: "btn-login-sign-up-gradient" %>
      <% end %>
    </div>
  </div>
 </div>
