    <!-- User Avatar -->
      <% if @user.avatar.attached? %>
        <%= image_tag(@user.avatar) %>
      <% else %>
        <%= image_tag 'avatar-placeholder.png' %>
      <% end %>

    <br><br><br>
    <h5>Account Details</h5>
