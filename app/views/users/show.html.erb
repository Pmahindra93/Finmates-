        <p>NICKNAME</p>
        <p><i class="fa fa-user-circle" aria-hidden="true"></i> <%= @nickname %></p>
        <br>
        <hr></hr>
        <p> EMAIL </p>
        <p><i class="fa fa-address-card" aria-hidden="true"></i> <%= @userEmail %></p>
        <br>
        <hr></hr>
        <p> NOTIFICATIONS </p>
        <p><i class="fa fa-eye" aria-hidden="true"></i> ON / OFF </p>
        <br>
        <hr></hr>
