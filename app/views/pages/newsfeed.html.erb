
<div class="primary-container-newsfeed">
  <div class="m-3 pt-5">

    <br>
    <script src="https://widgets.coingecko.com/coingecko-coin-price-marquee-widget.js"></script>
    <coingecko-coin-price-marquee-widget  coin-ids="bitcoin,ethereum,litecoin,ripple,cardano" currency="usd" background-color="#ffffff" locale="en"></coingecko-coin-price-marquee-widget>
    <br>
    <hr></hr>

    <% if user_signed_in? %>
      <h5><%= current_user.first_name %>, here is your bit-size news ðŸ’¸</h5>
    <% else %>
      <h5>Hey there, here is your bit-size news ðŸ’¸</h5>
    <% end %>
    <br>
  </div>
  <div class="cardsnf m-3">

   <!--  <br>
    <p> News from <strong><%= @week_date.strftime("%B %d, %Y")  %></strong> to <strong> <%= Date.today().strftime("%B %d, %Y") %> </strong> </p>
    <br> -->
    <% if @today_content.empty? %>
        <div class="py-2">
          <p>Apologies, our newspaper boy is on his way to deliver the latest news from the crypto world!</p>
        </div>
    <% else %>
      <% @today_content.each do |content| %>
        <%= link_to own_content_path(content) do %>
          <%= render 'components/card', content: content %>
          <br>
        <% end %>
      <% end %>
    <% end %>
  </div>
  <hr></hr>


    <!-- Education content -->

    <div class="m-3">
      <div class= "py-2 d-flex justify-content-between">
        <h5>Learn ðŸ“š</h5>
        <% if user_signed_in? && current_user.admin %>
            <%= link_to "Add", new_education_content_path %>
          <% end %>
      </div>

     <div class="cardsGrid">
        <% if @education_contents.empty? %>
        <div class="py-2">
          <p>Apologies, our teacher is on the way to deliver the latest course from the crypto world!</p>
        </div>
    <% else %>
      <% @education_contents.each do |e_content| %>
        <%= link_to education_content_path(e_content) do %>
          <%= render 'components/cardGrid', e_content: e_content %>
          <br>
        <% end %>
      <% end %>
    <% end %>
    </div>
  </div>
  <hr></hr>



    <!-- Did-you know section -->

  <div class="m-3">
      <div class= "py-2 d-flex justify-content-between">
        <h5>Did you know? ðŸ¤”</h5>
        <% if user_signed_in? && current_user.admin %>
            <%= link_to "Add", new_didyouknow_path %>
          <% end %>
      </div>

    <% if @didyouknows.empty? %>
        <p>Apologies, our minions are currently working really hard to get the latest content to you!</p>


  <!-- Carousel attempt using bootstrap -->

      <% else %>
      <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
          <div class="carousel-item active">
            <%= render 'components/thirdpartycard', did_you_know: @didyouknows.first  %>
          </div>
          <% @didyouknows.each_with_index do |dyk_slide, i| %>
              <% if i > 0 %>
                <div class="carousel-item">
                 <%= render 'components/thirdpartycard', did_you_know: dyk_slide %>
                </div>
              <% end %>
          <% end %>
        </div>

        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
      <% end %>
  </div>

  <!-- end of did you know -->
  <hr></hr>

