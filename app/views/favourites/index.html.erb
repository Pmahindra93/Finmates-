<div class="primary-container-newsfeed">
  <div class="mx-3 my-4 py-5">
    <br>
    <h5>Your Favourites</h5>
    <br>
   <% if @favourites.present? %>
      <% @favourites.each do |own_content| %>
        <%= link_to own_content_path(own_content.own_content) do %>
          <%= render 'components/card', own_content: own_content.own_content %>
          <br>
        <% end %>
      <% end %>
    <% else %>
      <p class="mt-2"> Currently, you have no Favourites! </p>
    <% end %>
  </div>
</div>


